#include <iostream>.
using namespace std;

void reverse(char* str) {
    char* end = str;
    char temp;
    if (str) {
        while (*end) {
            ++end;
        }
        --end;
        while (str < end) {
            temp = *str;
            *str++ = *end;
            *end-- = temp;
        }
    }
}

int main() {
    char str[] = "Hello, World!";
    cout << "Original string: " << str << endl;
    reverse(str);
    cout << "Reversed string: " << str << endl;
    return 0;
}
